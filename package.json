{
  "name": "translation_core",
  "productName": "translationCore",
  "version": "0.1.2",
  "description": "A bridge between TS and TM",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "compile": "babel out --out-dir out",
    "compile-modules": "babel modules --out-dir modules",
    "build-win": "xcopy src out /Y /E && npm run compile && node scripts/build-win.js",
    "build-mac": "cp -R src/ out/ && npm run compile && build --mac",
    "build-lin": "cp src/* out/ && npm run compile && build --linux",
    "start": "electron ."
  },
  "build": {
    "appId": "wa.translation_core.desktop",
    "category": "public.app-category.bible.tools"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unfoldingWord-dev/translationCore.git"
  },
  "keywords": [
    "Translation",
    "core",
    "Wycliffe"
  ],
  "author": {
    "name": "Wycliffe Associates",
    "email": "info@unfoldingword.org"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/unfoldingWord-dev/translationCore/issues"
  },
  "homepage": "https://github.com/unfoldingWord-dev/translationCore#readme",
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "electron": "^1.3.3",
    "electron-builder": "^5.26.0",
    "electron-packager": "^7.7.0",
    "electron-winstaller": "^2.3.4",
    "eslint": "^2.13.1",
    "eslint-config-google": "^0.6.0",
    "watch": "^0.19.2"
  },
  "dependencies": {
    "babel-core": "^6.13.2",
    "babel-preset-react": "^6.11.0",
    "babel-register": "^6.11.6",
    "bootstrap": "^3.3.7",
    "event-emitter": "^0.3.4",
    "flux": "^2.1.1",
    "fs-extra": "^0.30.0",
    "gogs-client": "^0.5.2",
    "http": "0.0.0",
    "marked": "^0.3.5",
    "natural": "^0.4.0",
    "path-extra": "^3.0.0",
    "react": "15.1.0",
    "react-bootstrap": "^0.29.5",
    "react-dom": "15.1.0",
    "react-dropzone": "^3.5.1",
    "react-remarkable": "^1.1.1",
    "simple-git": "^1.43.0",
